# Server Configuration
NODE_ENV=development
PORT=3000

# Supabase Configuration
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# Argon2 Password Hashing Configuration
# memoryCost: Memory usage in KB (default: 65536 = 64MB)
ARGON2_MEMORY_COST=65536
# timeCost: Number of iterations (default: 3)
ARGON2_TIME_COST=3
# parallelism: Number of threads (default: 1)
ARGON2_PARALLELISM=1

# JWT Configuration
# Secret key for signing JWT tokens (use a strong random string in production)
SECRET_KEY=
# Access token expiration time (e.g., '5m', '15m', '1h')
ACCESS_TOKEN_EXPIRES_IN=5m
# Refresh token expiration time (e.g., '1h', '24h', '7d')
REFRESH_TOKEN_EXPIRES_IN=1h
